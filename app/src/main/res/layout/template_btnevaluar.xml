<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data>
        <variable
            name="buttonEvaluar"
            type="com.example.camilo.sirem.models.BtnEvaluar"/>
        <variable
            name="handler"
            type="com.example.camilo.sirem.adapters.EjercicioAdapter"/>
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnEvaluacion"
            android:text="Evaluar Semana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{(view)->handler.goToEvaluacion(( int )view.tag)}"/>

    </LinearLayout>
</layout>
